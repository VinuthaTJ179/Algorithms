//Prims algorithm 
#include <iostream>
using namespace std;
int main()
{
    int n,i,j;
    cout<<"Enter the number of vertices:"<<endl;
    cin>>n;
    int arr[n][n],src,visited[n]={0},unvisited[n]={1};
    cout<<"Enter the adjacency matrix:"<<endl;
    for(i=0;i<n;i++)
    {
        for(j=0;j<n;j++)
        {
            cin>>arr[i][j];
        }
    }
    cout<<"Enter the source vertex:"<<endl;
    cin>>src;
    visited[src-1] = 1,unvisited[src-1] = 0;
    int x = 0,y=0,min = 999,sum_val=0;
    for(i=0;i<n;i++)
    {
        for(j=0;j<n;j++)
        {
            if(arr[i][j]<min && arr[i][j]>0 && unvisited[i] == 0)
            {
                min = arr[i][j];

                x = i;
                y = j;
            }
        }
        if(visited[i] == 0)
        {
        cout<<"Edge: "<<x<<"-"<<y<<" Weight: "<<min<<endl;
        sum_val+=min;
        visited[i] = 1;
        unvisited[i] = 0;
        }
        min = 999;
    }
    cout<<"Minimum cost: "<<sum_val<<endl;
    return 0;
}
